        <item name="toolbarColor">@color/black</item>
        <item name="toolbarTextColor">@color/white</item>
        <item name="android:statusBarColor">@color/purple_200</item>
        <item name="backgroundColor">@color/white</item>
        <item name="textColor">@color/black</item>
        <item name="subtextColor">@color/grey_3</item>
        <item name="edgeColor">@color/grey_2</item>
